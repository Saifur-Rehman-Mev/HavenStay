<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <div class="col-8 offset-2 show-card">
    <h2> <%= listing.title  %> </h2>
    <div class="card col -6">
         <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
         <p class="card-text">
            <%= listing.description  %>  <br>
            &#8377;<%= listing.price.toLocaleString("en-IN")%> <br>
            <%= listing.location  %> <br>
             <%= listing.country%> </p>
         </div>
    </div>

    <div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-2 edit-btn"> Edit </a>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-4">Delete</button>
    </form>
    </div>

    <div class="col-8 offset-2">
        <hr> 
        <h4>Leave a review here..</h4>
        <form action="/listings/<%= listing.id %>/reviews"  method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label"> Rating </label>
                <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label"> Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required>
                </textarea>
            </div>
            <button class="btn btn-outline-dark"> Submit</button> 
        </form>

        <hr>

        <p> <b>All Review</b></p>
        <div class="row ">
        <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3 ">
                 <div class="card-body">
                     <h5 class="card-title"> Saifur Rehman</h5>
                     <p class="card-text"> <%= review.comment %></p>
                     <p class="card-text"> Ratings : <%= review.rating %></p>
                     <form class="mb-3" method="post" action="/listings/<%= listing._id  %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark"> Delete</button>
                     </form>
                 </div>
            </div>
       <% } %>
      


            </div>
    </div>
</div>
<% layout("/layouts/boilerplate") %>
<body>
    <h1> All Listings </h1>
    <!-- <form method="get" action="/listings/new"> 
        <button> Create New Listings</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
         <% for (let listing of allListing){  %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card cols  listing-card" style="width: 18rem;">
  <img src="<%= listing.image  %>" class="card-img-top" alt="listing_image" style="height: 20rem" >
   <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text"> <b> <%=listing.title %> </b><br> <br>
         &#8377;<%= listing.price.toLocaleString("en-IN")  %> /night
    </p>
  </div>
</div>
   <% }  %>
    </div>
    </a>
</body>

